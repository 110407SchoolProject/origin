<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".ChangeDiaryActivity">


    <ImageView
        android:id="@+id/imageViewCalandarInChangeDiary"
        android:layout_width="165dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toTopOf="@+id/changeTextTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/calandar2" />

    <EditText
        android:id="@+id/changeTextTitle"
        android:layout_width="393dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="標題"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/changeTextContent"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_gravity="start"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:ems="10"
                android:gravity="clip_horizontal"
                android:hint="今天過得如何呢"
                android:inputType="textPersonName"
                android:keepScreenOn="true"
                android:textColor="#c8c8c8"
                android:textColorHint="#7B7B7B" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CategoryHintTextInChangeDiary"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="分類"
                    />

                <TextView
                    android:id="@+id/CategoryTextViewInChangeDiary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:ems="10"
                    android:gravity="left|top"
                    android:keepScreenOn="true"
                    android:text="未分類"

                    />

                <TextView
                    android:id="@+id/MoodHintTextInChangeDiary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="心情"
                     />

                <ImageView
                    android:id="@+id/currentMoodImageViewInChangeDiary"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="42dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/exciting" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/chooseCategoryInChangeDiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4">

        <ImageView
            android:id="@+id/btnCryingInChangeDiary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/crying" />

        <ImageView
            android:id="@+id/btnSadInChangeDiary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sad" />

        <ImageView
            android:id="@+id/bntNormalInChangeDiary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/normal" />

        <ImageView
            android:id="@+id/btnSmilingInChangeDiary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/smiling" />

        <ImageView
            android:id="@+id/btnExcitingInChangeDiary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/exciting" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveDiaryInChangeDiary"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/mainbtnpink"
        android:text="儲存日記"
        android:textColor="#fcfcfc"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/chooseCategoryInChangeDiary"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/mainbtnpink"
        android:text="選擇日記分類"
        android:textColor="#fcfcfc"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveDiaryInChangeDiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityEditDairy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:context=".EditDiaryActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="413dp"
        android:layout_height="737dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="206dp"

            app:srcCompat="@drawable/calandar" />

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FCFCFC"
            android:maxLength="16"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:ems="10"
            android:hint="標題"
            android:inputType="textPersonName"
            android:text="" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="345dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextContent"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:ems="10"
                    android:textColor="#FCFCFC"
                    android:gravity="clip_horizontal"
                    android:hint="今天過得如何呢"
                    android:textColorHint="#7B7B7B"
                    android:inputType="textPersonName"
                    android:keepScreenOn="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/CategoryHintText"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="1"
                        android:text="分類"
                        android:gravity="center|top"
                        android:textColor="#FCFCFC" />

                    <TextView
                        android:id="@+id/CategoryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:ems="10"
                        android:gravity="left|top"
                        android:keepScreenOn="true"
                        android:text="未分類"

                        android:textColor="#8E8E8E"></TextView>

                    <TextView
                        android:id="@+id/MoodHintText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="心情"
                        android:gravity="center|top"
                        android:textColor="#FCFCFC" />

                    <ImageView
                        android:id="@+id/currentMoodImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="40dp"
                        app:srcCompat="@drawable/exciting" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCrying"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/crying" />

            <ImageButton
                android:id="@+id/btnSad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/sad" />

            <ImageButton
                android:id="@+id/bntNormal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/normal" />

            <ImageButton
                android:id="@+id/btnSmiling"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/smiling" />

            <ImageButton
                android:id="@+id/btnExciting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/exciting" />
        </LinearLayout>

        <Button
            android:id="@+id/chooseCategory"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:text="選擇日記分類"></Button>

        <Button
            android:id="@+id/btnSaveDiary"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="32dp"
            android:text="儲存日記" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
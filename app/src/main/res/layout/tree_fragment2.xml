<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tree.tree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvtree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="過去日記所寫下的所有文字"
            android:textColor="#FFFFFF"
            android:textSize="20dp">

        </TextView>

        <ImageView
            android:id="@+id/tree"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:src="@drawable/tree">
        </ImageView>

        <ImageView
            android:id="@+id/treebone"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:layout_marginTop="-115dp"
            android:src="@drawable/treebone03">
        </ImageView>


        <Button
            android:id="@+id/btnCreateTree"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="產生我的心情樹"
            android:textSize="16dp"
            android:textColor="#000000"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
        </LinearLayout>



    </LinearLayout>

</FrameLayout>
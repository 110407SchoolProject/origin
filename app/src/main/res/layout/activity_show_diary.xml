<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".ShowDiaryActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="163dp"
        android:layout_height="147dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117"
        app:srcCompat="@drawable/calandar2" />

    <ImageView
        android:id="@+id/moodImage"
        android:layout_width="82dp"
        android:layout_height="54dp"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/textShowTitle"
        app:layout_constraintStart_toEndOf="@+id/textShowTitle"
        app:layout_constraintTop_toTopOf="@+id/textShowTitle"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/crying" />

    <TextView
        android:id="@+id/textShowTitle"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="32dp"
        android:text="動態標題"
        android:textColor="#66000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.667">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textShowContents"
                android:layout_width="361dp"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:text="動態取得內文"
                android:textColor="#66000000"
                android:textSize="18dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEditDiary"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="604dp"
        android:background="@drawable/mainbtnpink"
        android:text="編輯日記"

        android:textColor="#fcfcfc"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteDiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <Button
        android:id="@+id/btnDeleteDiary"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/mainbtnpink"
        android:text="刪除日記"
        android:textColor="#fcfcfc"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.646" />

    <TextView
        android:id="@+id/textShowCategory"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:gravity="right"
        android:hint="顯示分類"
        android:textColor="#66000000"
        app:layout_constraintBottom_toBottomOf="@+id/moodImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toEndOf="@+id/moodImage"
        app:layout_constraintTop_toTopOf="@+id/moodImage"
        app:layout_constraintVertical_bias="0.666" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:background="@drawable/mainbg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/cameraicon" />

        <TextView
            android:id="@+id/currentDiaryNumbersText"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_marginTop="68dp"
            android:layout_weight="10dp"
            android:gravity="center|top"
            android:text="日記篇數"
            android:textColor="#c8c8c8"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currentDiaryNumbers"
            android:layout_width="59dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:layout_weight="30"
            android:gravity="center|top"
            android:text="12"
            android:textColor="#C8C8C8"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="201dp" />

        <ImageView
            android:id="@+id/recentMoodImageView"
            android:layout_width="63dp"
            android:layout_height="65dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:src="@drawable/exciting"
            app:layout_constraintTop_toBottomOf="@+id/currentDiaryNumbersText"
            tools:layout_editor_absoluteX="305dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="106dp"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="68dp"
            android:layout_weight=""
            android:gravity="center|top"
            android:text="最近心情"
            android:textColor="#C8C8C8"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/profileImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="name here"
            android:textColor="#C8C8C8"

            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/profileImage"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="@+id/profileImage"
            app:layout_constraintTop_toBottomOf="@+id/profileImage" />


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/profileName"
            tools:layout_editor_absoluteX="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:id="@+id/textNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="nick name"
                    android:textColor="#C8C8C8"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profileUsername"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="username"
                    android:textColor="#C8C8C8"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/prompt_email"
                    android:textColor="#C8C8C8" />

                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="email"
                    android:textColor="#C8C8C8"
                    android:textSize="16dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="birthday"
                    android:textColor="#C8C8C8" />

                <TextView
                    android:id="@+id/profileBirhtday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="birthdate"
                    android:textColor="#C8C8C8"
                    android:textSize="16dp" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnPasswordsetting"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/mainbtnpink"
            android:enabled="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="密碼設置"
            android:textColor="#ffffff"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editprofile"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/editprofile"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/mainbtnpink"
            android:enabled="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="編輯個人設置"
            android:textColor="#ffffff"

            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remindtext" />

        <TextView
            android:id="@+id/remindtext"
            android:layout_width="154dp"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:text="設置日記提醒"
            android:textColor="#C8C8C8"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/remind"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"></TextView>

        <Switch
            android:id="@+id/remind"
            android:layout_width="47dp"
            android:layout_height="15dp"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:gravity="center_vertical|center_horizontal"
            android:textOff="關閉"
            android:textOn="打開"
            android:theme="@style/SCBSwitch"
            app:layout_constraintBottom_toBottomOf="@+id/remindtext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/remindtext"
            app:layout_constraintVertical_bias="0.368" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
